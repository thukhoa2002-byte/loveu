      --bg1: #fff5f9;
      --bg2: #ffeef6;
      --shadow: rgba(255, 105, 180, 0.18);
    }

    body {
      font-family: "Poppins", "Montserrat", sans-serif;
      background: radial-gradient(circle at 50% 20%, var(--bg2), var(--bg1) 70%);
      display: flex;
