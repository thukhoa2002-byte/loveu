    <div id="effects"></div>
  </main>

  <script>
    const lines = [
      "HAPPY VIETNAMESE",
      "WOMEN'S DAY"
    ];

    const headline = document.getElementById("headline");

    let charIndex = 0;
    lines.forEach(line => {
      const lineContainer = document.createElement('div');
      lineContainer.style.display = 'block';
      line.split("").forEach(char => {
        const span = document.createElement("span");
        span.textContent = char === " " ? "\u00A0" : char;
        span.style.setProperty("--i", charIndex++);
        lineContainer.appendChild(span);
      });
      headline.appendChild(lineContainer);
    });

    const container = document.getElementById('effects');
    const flowerColors = ['#ffb7d5','#ffd6e0','#ffc1c1','#ffe0d1','#fff1e9','#ff99c8'];

    function flowerSVG(color) {
      return `<svg viewBox="0 0 64 64" xmlns="http://www.w3.org/2000/svg">
        <path fill="${color}" d="M32 10c3 0 5 3 5 6 0 2-1 4-2 5 2-1 5-2 7-2 3 0 6 2 6 5s-3 5-6 5c-2 0-5-1-7-2 1 1 2 3 2 5 0 3-2 6-5 6s-5-3-5-6c0-2 1-4 2-5-2 1-5 2-7 2-3 0-6-2-6-5s3-5 6-5c2 0 5 1 7 2-1-1-2-3-2-5 0-3 2-6 5-6z"/>
      </svg>`;
    }

    function heartSVG(color){
      return `<svg viewBox="0 0 32 29" xmlns="http://www.w3.org/2000/svg">
        <path fill="${color}" d="M23.6 2.6c-2.7 0-4.3 2.1-4.6 2.7-.3-.6-1.9-2.7-4.6-2.7-3.9 0-7.4 3.6-7.4 7.8 0 8.8 11 12.3 12 13 .9-.6 12-4.2 12-13 0-4.2-3.5-7.8-7.4-7.8z"/>
      </svg>`;
    }

    function spawnFlowers(n=10){
      for(let i=0;i<n;i++){
        const f=document.createElement('div');
        f.className='flower';
        const c=flowerColors[Math.floor(Math.random()*flowerColors.length)];
        f.innerHTML=flowerSVG(c);
        f.style.left=`${30+Math.random()*40}%`;
        f.style.top=`${30+Math.random()*40}%`;
        f.style.animationDelay=`${Math.random()*2}s`;
        f.style.transformOrigin='center';
        f.style.zIndex=0;
        container.appendChild(f);
      }
    }

    function spawnHearts(n=15){
      for(let i=0;i<n;i++){
        const h=document.createElement('div');
        h.className='heart';
        const color=['#ff9fc9','#ffc0da','#ffd9ec'][Math.floor(Math.random()*3)];
        h.innerHTML=heartSVG(color);
        h.style.left=`${Math.random()*100}%`;
        h.style.animationDuration=`${6+Math.random()*6}s`;
        h.style.animationDelay=`${Math.random()*3}s`;
        container.appendChild(h);
      }
    }

    spawnFlowers(10);
    spawnHearts(15);
  </script>
</body>
